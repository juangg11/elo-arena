{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": ".",
        "types": [
            "node"
        ]
    },
    "include": [
        "scripts/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}